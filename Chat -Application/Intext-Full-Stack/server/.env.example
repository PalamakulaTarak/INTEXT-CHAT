# Server environment example for Render deployment

# App
PORT=5001
NODE_ENV=production
FRONTEND_URL=https://intext10.onrender.com

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
JWT_SECRET=replace-with-a-strong-secret

# Email (Gmail SMTP)
GMAIL_USER=you@gmail.com
GMAIL_APP_PASSWORD=your-app-password
MAIL_FROM="QuickChat Support" <you@gmail.com>

# Optional: Transactional email (Resend)
RESEND_API_KEY=

# Cloudinary for image hosting (optional if you store base64)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
